generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model decision {
  id         Int      @id @default(autoincrement())
  title      String?
  isResolved Boolean?
  passPrice  Float?
  failPrice  Float?
  chatId     Int?
  agents     agent[]
}

model chat {
  id        Int       @id @default(autoincrement())
  createdAt DateTime? @db.Date
  agents    agent[]
}

model agent {
  id               Int        @id @default(autoincrement())
  walletAddress    String?
  personality      String?
  encryptedKeypair String?
  chatId           Int
  chat             chat       @relation(fields: [chatId], references: [id])
  decisions        decision[]
}
